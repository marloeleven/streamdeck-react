{
  "name": "streamdeck",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@rescripts/cli": "^0.0.12",
    "@rescripts/rescript-env": "^0.0.10",
    "classnames": "^2.2.6",
    "immer": "^6.0.2",
    "lodash": "^4.17.15",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-observable": "^1.1.3",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "redux": "^4.0.4",
    "rescripts": "^0.0.1-security",
    "rxjs": "^6.5.3",
    "streamdeck-xsplit-connect": "https://gitlab.xsplit.com/xsplit-plugins/xjs-client-connect.git",
    "unstated": "^2.1.1"
  },
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build && yarn copyJs && yarn copyCss && yarn installer",
    "test": "rescripts test",
    "eject": "rescripts eject",
    "copyJs": "cp ./build/build.js ./installer/com.xsplit.streamdeck.sdPlugin/build.js",
    "copyCss": "cp ./build/static/css/*.css ./installer/com.xsplit.streamdeck.sdPlugin/css/main.css",
    "removeInstaller": "rm -rf installer/Release/com.xsplit.streamdeck.streamDeckPlugin",
    "installer": "yarn removeInstaller && cd ./installer && DistributionTool.exe -b -i com.xsplit.streamdeck.sdPlugin -o Release",
    "update": "yarn upgrade streamdeck-xsplit-connect@https://gitlab.xsplit.com/xsplit-plugins/xjs-client-connect.git"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
